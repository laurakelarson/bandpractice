<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.PickItemsPage"
             >

    <ContentPage.Content>
        <StackLayout Style="{StaticResource VerticalStack}"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand">

            <Label Text="ROCK ON!" Style="{StaticResource HeaderCenterStyle}"
                   Margin="10" />

            <StackLayout Style="{StaticResource VerticalStack}" Margin="10" >
                <Label Text="Item Swap Summary" />

                <ScrollView
                    Orientation="Vertical"
                    VerticalOptions="Fill">

                    <Label x:Name="ItemsLabel" Text="sljfd\nslfjds\nkfsldfsd\nkjdls"
                        Style="{StaticResource ScrollableLabel}" />
                </ScrollView>
            </StackLayout>

            <Button Clicked="CloseButton_Clicked" Text="Next Round"></Button>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.BattlePage">

    <ContentPage.Content>
        <StackLayout Style="{StaticResource VerticalStack}"
                     HorizontalOptions="Fill">
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand">
                    <Label Text="Round" />
                    <Label x:Name="RoundCount" 
                           Text="{Binding Data.RoundCount}"/>
                </StackLayout>

                <Button HorizontalOptions="EndAndExpand"
                    Clicked="QuitButton_Clicked" Text="Quit"></Button>
            </StackLayout>
            
            <!-- Character Info Box -->

            <Frame
                BorderColor="{StaticResource SecondaryTextColor}"
                BackgroundColor="{StaticResource PrimaryBackgroundColor}">
                <FlexLayout
                    BackgroundColor="{StaticResource PrimaryBackgroundColor}"
                    x:Name="CharacterInfoBox"
                    HorizontalOptions="FillAndExpand">
                    
                </FlexLayout>
            </Frame>
            
            
            <!-- Battle Grid -->
            
            <!-- Buttons -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Clicked="SkipButton_Clicked" Text="Skip"></Button>
                <Button Clicked="AttackButton_Clicked" Text="Attack"></Button>
            </StackLayout>
            
            <!-- Message Box -->
            <Frame
                BorderColor="{StaticResource SecondaryTextColor}"
                BackgroundColor="{StaticResource PrimaryBackgroundColor}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="75"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="700"/>
                    </Grid.ColumnDefinitions>
                    <ScrollView Grid.Row="0" Grid.Column="0"
                    Orientation="Vertical"
                    VerticalOptions="Fill">
                        <Label 
                        Text="{Binding Data.MessageList}" 
                        Style="{StaticResource ScrollableLabel}"/>
                    </ScrollView>
                </Grid>
            </Frame>


            <Button Clicked="NewRoundButton_Clicked" Text="New Round"></Button>

            <Button Clicked="RoundOverButton_Clicked" Text="Round Over"></Button>
            
            <Button Clicked="BattleOverButton_Clicked" Text="Battle Over"></Button>
            
            <Button Clicked="ExitButton_Clicked" Text="Exit"></Button>

            

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.HomePage">

    <ContentPage.Content>
        <ScrollView
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand">

            <StackLayout
                Orientation="Vertical"
                VerticalOptions="Center"
                HorizontalOptions="Center">

                <Image
                 Source="bp_logo.png"
                 />


                <ImageButton
                    Source="enter_button.png"
                    Clicked="MyBand_Button_Clicked"
                    HeightRequest="70"/>
                <ImageButton
                    Source="demotape_button.png"
                    HeightRequest="50"
                    />
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="CenterAndExpand">
                    <Button
                    Text="Encylopedia"
                    FontFamily="PixelSplitter"
                    Clicked="Encyclopedia_Button_Clicked"
                    />
                    <Button
                    Text="High Score"
                    FontFamily="PixelSplitter"
                    />
                </StackLayout>


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
